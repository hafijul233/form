{
  "name": "hafijul233/form",
  "type": "library",
  "description": "Laravel collective based bootstrap form components",
  "support": {
    "issues": "https://github.com/hafijul233/form/issues",
    "wiki": "https://github.com/hafijul233/form/wiki",
    "source": "https://github.com/hafijul233/form",
    "docs": "https://hafijulislam.me/projects/form"
  },
  "keywords": [
    "framework",
    "laravel",
    "form",
    "bootstrap",
    "components",
    "php-form"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Hafijul Islam",
      "email": "hafijul233@gmail.com",
      "homepage": "https://www.hafijulislam.me",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^7.4",
    "laravelcollective/html": "^6.2",
    "illuminate/contracts": "^8.83"
  },
  "require-dev": {
    "nunomaduro/collision": "^5.11",
    "nunomaduro/larastan": "^1.0",
    "orchestra/testbench": "^6.24",
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-laravel": "^1.2",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.1",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Hafijul233\\Form\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hafijul233\\Form\\Tests\\": "tests"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Hafijul233\\Form\\Providers\\FormServiceProvider"
      ],
      "aliases": {
        "Form": "Collective\\Html\\FormFacade",
        "Html": "Collective\\Html\\HtmlFacade"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
